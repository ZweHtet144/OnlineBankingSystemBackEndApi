                        </div>
                    </div>

                    <div class="main-divs-agileits-w3layouts">
                        <div class="bottom-w3-agileits-space form-text1">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control",@type="password", placeholder = "EnterPassword", required = "required" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="bottom-w3-agileits-space form-text2">
                            @Html.EditorFor(model => model.Phoneno, new { htmlAttributes = new { @class = "form-control", placeholder = "EntePhoneNo", required = "required",pattern="[09][0-9]{10}"} })
                            @Html.ValidationMessageFor(model => model.Phoneno, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="main-divs-agileits-w3layouts">
                        <div class="bottom-w3-agileits-space form-text1">
                            @ViewData["Message"]
                            @Html.EditorFor(model => model.NRC, new { htmlAttributes = new { @class = "form-control", placeholder = "EnterNRCNo", required = "required"}})
                            @Html.ValidationMessageFor(model => model.NRC, "", new { @class = "text-danger" })
                        </div>
                        <div class="bottom-w3-agileits-space form-text2">
                            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", placeholder = "EnterAddress", required = "required" } })
                            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <input type="submit" value="Create" class="btn btn-success">
                    <div class="clear"></div>
                </form>
            </div>
        </div>
      




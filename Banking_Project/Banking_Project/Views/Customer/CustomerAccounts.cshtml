@model IEnumerable<Banking_Project.Models.CustomerAccounts>
<link href="~/Content/plugins/datatables/dataTables.bootstrap4.css" rel="stylesheet" />
<link href="~/Content/jquery.dataTables.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.dataTables.js"></script>
@{
    ViewBag.Title = "Customer Bank Accounts List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h4>Customer Bank Accounts List</h4>
@if (Session["UserName"] == null)
{
    Response.Redirect("/adminlogin/index");
}
<table id="example1" class="table table-bordered table-hover table-responsive">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NRC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phoneno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
              Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
               
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NRC)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phoneno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)

                </td>
                <td>
                    @Html.ActionLink("Deposite", "Deposite", new {  id=item.AccountNo,AccountType=item.AccountType}) |
                    @*@Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ },, new { @class = "fa fa-edit" })*@
                    @Html.ActionLink(" ", "AccountDelete", new { id = item.AccountNo }, new { @class = "btn btn-danger btn-sm  fa fa-trash" })

                </td>
            </tr>
        }
        </tbody>

</table>
<script>
  $(function () {
    $("#example1").DataTable();
    $('#example2').DataTable({
      "paging": true,
      "lengthChange": false,
      "searching": false,
      "ordering": true,
      "info": true,
      "autoWidth": true,
      "scrollX":true
    });
  });
</script>
